<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Número de jugadas:"
                    android:textAlignment="center" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/display"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="¿?"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.8"
        android:background="@drawable/fondo">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="4"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/f0c0"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_rowWeight="0.3"
                android:layout_columnWeight="0.3"
                android:padding="20dp"
                style="@style/Button_ficha"
                android:text="1"
                android:textSize="25dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/f0c1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_rowWeight="0.3"
                android:layout_columnWeight="0.3"
                android:padding="20dp"
                style="@style/Button_ficha"
                android:text="1"
                android:textSize="25dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/f0c2"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_rowWeight="0.3"
                android:layout_columnWeight="0.3"
                android:padding="20dp"
                style="@style/Button"
                android:text="1"
                android:textSize="25dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/f1c0"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_rowWeight="0.3"
                android:layout_columnWeight="0.3"
                android:padding="20dp"
                style="@style/Button_ficha"
                android:text="1"
                android:textSize="25dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/f1c1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_rowWeight="0.3"
                android:layout_columnWeight="0.3"
                android:padding="20dp"
                style="@style/Button_ficha"
                android:text="1"
                android:textSize="25dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/f1c2"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_rowWeight="0.3"
                android:layout_columnWeight="0.3"
                android:padding="20dp"
                style="@style/Button_ficha"
                android:text="1"
                android:textSize="25dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/f2c0"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_rowWeight="0.3"
                android:layout_columnWeight="0.3"
                android:padding="20dp"
                style="@style/Button_ficha"
                android:text="1"
                android:textSize="25dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/f2c1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_rowWeight="0.3"
                android:layout_columnWeight="0.3"
                android:padding="20dp"
                style="@style/Button_ficha"
                android:text="1"
                android:textSize="25dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/f2c2"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_rowWeight="0.3"
                android:layout_columnWeight="0.3"
                android:padding="20dp"
                style="@style/Button"
                android:text="1"
                android:textSize="25dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/f3c0"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_rowWeight="0.3"
                android:layout_columnWeight="0.3"
                android:padding="20dp"
                style="@style/Button_ficha"
                android:text="1"
                android:textSize="25dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/f3c1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_rowWeight="0.3"
                android:layout_columnWeight="0.3"
                android:padding="20dp"
                style="@style/Button_ficha"
                android:text="1"
                android:textSize="25dp">
            </ImageButton>

            <ImageButton
                android:id="@+id/f3c2"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_rowWeight="0.3"
                android:layout_columnWeight="0.3"
                android:padding="20dp"
                style="@style/Button_ficha"
                android:text="1"
                android:textSize="25dp">
            </ImageButton>

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.1">

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>